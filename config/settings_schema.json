[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.2.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },

  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      },
      {
        "type": "font_picker",
        "id": "type_secondary_font",
        "default": "roboto_n4",
        "label": "t:general.secondary"
      },
      {
        "type": "range",
        "id": "base_font_size",
        "min": 12,
        "max": 22,
        "step": 1,
        "unit": "px",
        "label": "t:labels.base_font_size",
        "default": 16
      },
      {
        "type": "select",
        "id": "heading_transform",
        "label": "t:labels.heading_transform",
        "options": [
          { "value": "none", "label": "None" },
          { "value": "uppercase", "label": "Uppercase" },
          { "value": "capitalize", "label": "Capitalize" }
        ],
        "default": "none"
      }
    ]
  },

  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          { "value": "90rem", "label": "t:options.page_width.narrow" },
          { "value": "110rem", "label": "t:options.page_width.wide" },
          { "value": "100%", "label": "Full Width" }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      },
      {
        "type": "checkbox",
        "id": "enable_boxed_layout",
        "label": "Enable Boxed Layout",
        "default": false
      }
    ]
  },

  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "color_background",
        "id": "global_gradient",
        "label": "t:labels.global_gradient"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },

  {
    "name": "t:general.buttons",
    "settings": [
      {
        "type": "color",
        "id": "button_bg",
        "label": "Button Background",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "button_text",
        "label": "Button Text",
        "default": "#FFFFFF"
      },
      {
        "type": "range",
        "id": "button_radius",
        "label": "Button Radius",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "default": 25
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Button Style",
        "options": [
          { "value": "solid", "label": "Solid" },
          { "value": "outline", "label": "Outline" },
          { "value": "ghost", "label": "Ghost" }
        ],
        "default": "solid"
      }
    ]
  },

  {
    "name": "t:general.animations",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_scroll_animations",
        "label": "Enable Scroll Animations",
        "default": true
      },
      {
        "type": "range",
        "id": "animation_speed",
        "label": "Animation Speed",
        "min": 100,
        "max": 2000,
        "step": 100,
        "unit": "ms",
        "default": 500
      },
      {
        "type": "select",
        "id": "animation_style",
        "label": "Animation Style",
        "options": [
          { "value": "fade", "label": "Fade" },
          { "value": "slide", "label": "Slide" },
          { "value": "zoom", "label": "Zoom" },
          { "value": "flip", "label": "Flip" }
        ],
        "default": "fade"
      }
    ]
  },

  {
    "name": "t:general.grid",
    "settings": [
      {
        "type": "range",
        "id": "grid_gap",
        "label": "Grid Gap",
        "min": 0,
        "max": 50,
        "step": 2,
        "unit": "px",
        "default": 20
      },
      {
        "type": "range",
        "id": "card_corner_radius",
        "label": "Card Corner Radius",
        "min": 0,
        "max": 30,
        "step": 1,
        "unit": "px",
        "default": 8
      },
      {
        "type": "checkbox",
        "id": "enable_card_shadow",
        "label": "Enable Card Shadow",
        "default": true
      }
    ]
  },

  {
    "name": "t:general.header_footer",
    "settings": [
      {
        "type": "checkbox",
        "id": "sticky_header",
        "label": "Sticky Header",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "transparent_header",
        "label": "Transparent Header",
        "default": false
      },
      {
        "type": "range",
        "id": "footer_padding",
        "label": "Footer Padding",
        "min": 10,
        "max": 100,
        "step": 5,
        "unit": "px",
        "default": 40
      }
    ]
  }
]
