<section 
  class="announcement-bar flex text-white py-2 overflow-hidden" 
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">

  <div class="marquee flex whitespace-nowrap gap-16">
    {% for block in section.blocks %}
      <span class="mx-8">{{ block.settings.text }}</span>
    {% endfor %}
    {%- comment -%} Duplicate announcements for seamless scroll {%- endcomment -%}
    {% for block in section.blocks %}
      <span class="mx-8">{{ block.settings.text }}</span>
    {% endfor %}
  </div>

  <style>
    .marquee {
      display: inline-flex;
      min-width: max-content;
      animation: scroll-left 20s linear infinite;
    }
    @keyframes scroll-left {
      0% { transform: translateX(100%); }
      100% { transform: translateX(-100%); }
    }
  </style>
</section>

